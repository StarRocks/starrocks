-- name: test_set_then_dml_then_commit
create database db_${uuid2};
-- result:
-- !result
use db_${uuid2};
-- result:
-- !result
create table t1(id int) primary key(id);
-- result:
-- !result
begin;
-- result:
-- !result
set query_timeout = 300;
-- result:
-- !result
insert into t1 values(10);
-- result:
-- !result
commit;
-- result:
-- !result
select * from t1 order by id;
-- result:
10
-- !result
