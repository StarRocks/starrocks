-- name: test_primary_index_cache_expire
show backends;
CREATE table tab1 (
      k1 INTEGER,
      k2 VARCHAR(50),
      v1 INTEGER,
      v2 INTEGER,
      v3 INTEGER
)
ENGINE=OLAP
PRIMARY KEY(`k1`,`k2`)
DISTRIBUTED BY HASH(`k1`) BUCKETS 10
PROPERTIES (
    "replication_num" = "1",
    "primary_index_cache_expire_sec" = "3600"
);
-- result:
-- !result
show create table tab1;
-- result:
tab1	CREATE TABLE `tab1` (
  `k1` int(11) NOT NULL COMMENT "",
  `k2` varchar(50) NOT NULL COMMENT "",
  `v1` int(11) NULL COMMENT "",
  `v2` int(11) NULL COMMENT "",
  `v3` int(11) NULL COMMENT ""
) ENGINE=OLAP 
PRIMARY KEY(`k1`, `k2`)
DISTRIBUTED BY HASH(`k1`) BUCKETS 10 
PROPERTIES (
"replication_num" = "1",
"in_memory" = "false",
"enable_persistent_index" = "true",
"replicated_storage" = "true",
"primary_index_cache_expire_sec" = "3600",
"compression" = "LZ4"
);
-- !result
insert into tab1 values(100, "100", 100, 100, 100), (200, "200", 200, 200, 200), (300, "300", 300, 300, 300);
-- result:
-- !result
select * from tab1 where v2 = 200;
-- result:
200	200	200	200	200
-- !result
