-- name: test_auto_capturer @sequential

create table t1 (
    k1 int,
    k2 int,
    k3 string
)
duplicate key(k1)
distributed by hash(k1) buckets 1
properties("replication_num" = "1");

create table t2 like t1;

insert into t1 
select s1, s1 % 1000, repeat('a', 128) FROM TABLE(generate_series(1, 100)) s(s1);

insert into t2 select * from t1;

truncate table _statistics_.query_history;
truncate table _statistics_.spm_baselines;
select count(1) from _statistics_.query_history;

set global enable_query_history=true;
set global query_history_load_interval_seconds=2;
set global enable_plan_capture=true;
set global plan_capture_interval_seconds=10;

select count(1) from t1 join t2 on t1.k2 = t2.k2;
select count(1) from t1 join t2 on t1.k2 = t2.k2 limit 10;
select count(1) from t1 join t2 on t1.k2 = t2.k2;
select count(1) from t1 join t2 on t1.k2 = t2.k2 limit 10;
select sleep(5);
select count(1) from t1 join t2 on t1.k2 = t2.k2;
select count(1) from t1 join t2 on t1.k2 = t2.k2 limit 10;
select count(1) from t1 join t2 on t1.k2 = t2.k2;
select count(1) from t1 join t2 on t1.k2 = t2.k2 limit 10;
select sleep(5);
select count(1) from t1 join t2 on t1.k2 = t2.k2 limit 10;
select sleep(5);

select count(1) from _statistics_.query_history where sql_digest like "%count%"; 
select count(1) from _statistics_.spm_baselines where is_enable = false;
select count(1) from _statistics_.spm_baselines where source = "CAPTURE";

set global enable_query_history=false;
set global query_history_load_interval_seconds=900;
set global enable_plan_capture=false;
set global plan_capture_interval_seconds=10800;

