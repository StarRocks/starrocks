-- name: testDropSnapshotStorageVolume
CREATE STORAGE VOLUME storage_volume_drop type = s3 LOCATIONS = ('s3://xxx') COMMENT 'comment' PROPERTIES ("aws.s3.endpoint"="endpoint", "aws.s3.region"="us-west-2", "aws.s3.use_aws_sdk_default_behavior" = "true", "enabled"="false");
-- result:
-- !result
SHOW STORAGE VOLUMES like 'storage_volume_drop';
-- result:
storage_volume_drop
-- !result
ADMIN SET AUTOMATED CLUSTER SNAPSHOT ON STORAGE VOLUME storage_volume_drop;
-- result:
-- !result
DROP STORAGE VOLUME storage_volume_drop;
-- result:
E: (1064, "Snapshot enabled on storage volume 'storage_volume_drop', drop volume failed")
-- !result
ADMIN SET AUTOMATED CLUSTER SNAPSHOT OFF;
-- result:
-- !result
DROP STORAGE VOLUME storage_volume_drop;
-- result:
-- !result
SHOW STORAGE VOLUMES like 'storage_volume_drop';
-- result:
-- !result
