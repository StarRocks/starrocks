-- name: test_drop_table
CREATE TABLE t0(c0 INT) DUPLICATE KEY(c0) DISTRIBUTED BY HASH(c0) BUCKETS 1 PROPERTIES('replication_num'='1');
-- result:
-- !result
INSERT INTO t0 VALUES(1),(2),(3);
-- result:
-- !result
DROP TABLE t0;
-- result:
-- !result
RECOVER TABLE t0;
-- result:
-- !result
SELECT * FROM t0 ORDER BY c0;
-- result:
1
2
3
-- !result
INSERT INTO t0 VALUES(4);
-- result:
-- !result
SELECT * FROM t0 ORDER BY c0;
-- result:
1
2
3
4
-- !result
DROP TABLE t0 FORCE;
-- result:
-- !result
RECOVER TABLE t0;
-- result:
E: (5502, "Unknown table 't0'")
-- !result
CREATE TABLE t0(c0 INT, c1 INT) DUPLICATE KEY(c0) DISTRIBUTED BY HASH(c0) BUCKETS 1 PROPERTIES('replication_num'='1');
-- result:
-- !result
INSERT INTO t0 VALUES(1, 10),(2, 20),(3, 30);
-- result:
-- !result
DROP TABLE t0;
-- result:
-- !result
CREATE TABLE t0(c0 INT, c1 INT) DUPLICATE KEY(c0) DISTRIBUTED BY HASH(c0) BUCKETS 1 PROPERTIES('replication_num'='1');
-- result:
-- !result
RECOVER TABLE t0;
-- result:
E: (1050, "Table 't0' already exists")
-- !result
INSERT INTO t0 VALUES(1, 100),(2, 200),(3, 300);
-- result:
-- !result
SELECT * FROM t0 ORDER BY c0;
-- result:
1	100
2	200
3	300
-- !result
DROP TABLE t0;
-- result:
-- !result
RECOVER TABLE t0;
-- result:
-- !result
SELECT * FROM t0 ORDER BY c0;
-- result:
1	100
2	200
3	300
-- !result
INSERT INTO t0 VALUES(4, 400);
-- result:
-- !result
SELECT * FROM t0 ORDER BY c0;
-- result:
1	100
2	200
3	300
4	400
-- !result
DROP TABLE t0 FORCE;
-- result:
-- !result
