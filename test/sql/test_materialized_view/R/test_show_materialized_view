)
AS SELECT `user_tags`.`user_id`, bitmap_union(to_bitmap(`user_tags`.`tag_id`)) AS `bitmap_union(to_bitmap(tag_id))`
FROM `test_show_materialized_view`.`user_tags`
GROUP BY `user_tags`.`user_id`;
-- !result
