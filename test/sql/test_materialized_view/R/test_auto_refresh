-- name: test_auto_refresh
create database db_${uuid0};
-- result:
-- !result
use db_${uuid0};
-- result:
-- !result
CREATE TABLE t1 (
    __time datetime,
    c1 int
)
PARTITION BY date_trunc('DAY', __time);
-- result:
-- !result
INSERT INTO t1 VALUES 
    ('2024-04-01', 1),
    ('2024-04-02', 1),
    ('2024-04-03', 1),
    ('2024-04-04', 1),
    ('2024-04-05', 1);
-- result:
-- !result
CREATE MATERIALIZED VIEW `mv1`
PARTITION BY (`__time`)
REFRESH ASYNC
PROPERTIES (
    "auto_refresh_partitions_limit" = "3",
    "partition_refresh_number" = "-1"
)
AS select * from t1;
