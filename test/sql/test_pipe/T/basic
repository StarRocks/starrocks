-- name: test_pipe_basic
show pipes;

-- show pipes
create database db_${uuid0};
create database db_${uuid1};
use db_${uuid0};
show pipes;
show pipes from db_${uuid1};

-- create/alter/show/drop/desc
create table t1 (id int, name string) duplicate key(id) properties('replication_num' = '1');
create pipe p1 as 
    insert into t1 
    select * from files('path' = 'fake://file.parquet', 'format'='parquet');

[UC]show pipes;
[UC]desc pipe p1;
alter pipe p1 pause;
[UC]show pipes;
alter pipe p1 resume;
[UC]show pipes;
use db_${uuid1};
[UC]show pipes from db_${uuid0};
use db_${uuid0};
drop pipe p1;
show pipes;

-- drop database
drop database db_${uuid0};
create database db_${uuid0};
use db_${uuid0};
show pipes;