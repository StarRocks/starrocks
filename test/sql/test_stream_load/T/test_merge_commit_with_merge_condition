-- name: test_merge_commit_with_merge_condition
create database db_${uuid0};
use db_${uuid0};

CREATE TABLE `t0`
(
    `id` int(11) NOT NULL COMMENT "用户 ID",
    `name` varchar(65533) NULL COMMENT "用户姓名",
    `score` int(11) NOT NULL COMMENT "用户得分",
    `version` int(11) NOT NULL COMMENT "版本号"
)
ENGINE=OLAP
PRIMARY KEY(`id`)
DISTRIBUTED BY HASH(`id`)
PROPERTIES (
 "replication_num" = "1"
);

CONCURRENCY {

-- thread name 1:
shell: curl --location-trusted -u root: -X PUT -H "Expect:100-continue"  -H "format:json" -H "enable_merge_commit:true" -H "merge_commit_interval_ms:3000" -H "merge_commit_parallel:4" -H "merge_condition: version" -d '{"id":1,"name":"n1","score":1, "version": 1}' ${url}/api/db_${uuid0}/t0/_stream_load

-- thread name 2:
shell: curl --location-trusted -u root: -X PUT -H "Expect:100-continue"  -H "format:json" -H "enable_merge_commit:true" -H "merge_commit_interval_ms:3000" -H "merge_commit_parallel:4" -H "merge_condition: version" -d '{"id":2,"name":"n2","score":2, "version": 1}' ${url}/api/db_${uuid0}/t0/_stream_load

-- thread name 3:
shell: curl --location-trusted -u root: -X PUT -H "Expect:100-continue"  -H "format:json" -H "enable_merge_commit:true" -H "merge_commit_interval_ms:3000" -H "merge_commit_parallel:4" -H "merge_condition: version" -d '{"id":3,"name":"n3","score":3, "version": 1}' ${url}/api/db_${uuid0}/t0/_stream_load

} END CONCURRENCY

sync;
select * from t0 order by id;

CONCURRENCY {

-- thread name 4:
shell: curl --location-trusted -u root: -X PUT -H "Expect:100-continue"  -H "format:json" -H "enable_merge_commit:true" -H "merge_commit_interval_ms:3000" -H "merge_commit_parallel:4" -H "merge_commit_async:true" -H "merge_condition: version" -d '{"id":1,"name":"n4","score":4, "version": 0}' ${url}/api/db_${uuid0}/t0/_stream_load

-- thread name 5:
shell: curl --location-trusted -u root: -X PUT -H "Expect:100-continue"  -H "format:json" -H "enable_merge_commit:true" -H "merge_commit_interval_ms:3000" -H "merge_commit_parallel:4" -H "merge_commit_async:true" -H "merge_condition: version" -d '{"id":2,"name":"n5","score":5, "version": 1}' ${url}/api/db_${uuid0}/t0/_stream_load

-- thread name 6:
shell: curl --location-trusted -u root: -X PUT -H "Expect:100-continue"  -H "format:json" -H "enable_merge_commit:true" -H "merge_commit_interval_ms:3000" -H "merge_commit_parallel:4" -H "merge_commit_async:true" -H "merge_condition: version" -d '{"id":3,"name":"n6","score":6, "version": 2}' ${url}/api/db_${uuid0}/t0/_stream_load

} END CONCURRENCY

function: wait_db_transaction_finish("db_${uuid0}", 60)

sync;
select * from t0 order by id;