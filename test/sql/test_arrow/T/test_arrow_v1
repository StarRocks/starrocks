-- name: test_flight
arrow: DROP DATABASE IF EXISTS arrow_demo;

arrow: CREATE DATABASE arrow_demo;

arrow: USE arrow_demo;

arrow: CREATE TABLE arrow_demo.test (id INT, name STRING) ENGINE=OLAP PRIMARY KEY (id) DISTRIBUTED BY HASH(id) BUCKETS 1 PROPERTIES ('replication_num' = '1');

arrow: INSERT INTO arrow_demo.test VALUES (1, 'Alice'), (2, 'Bob');

arrow: INSERT INTO arrow_demo.test VALUES (1, 'Alice'), (2, 'Bob');

arrow: INSERT INTO arrow_demo.test VALUES (3, 'Zac'), (4, 'Tom');

arrow: SELECT * FROM arrow_demo.test order by id asc;

arrow: UPDATE arrow_demo.test SET name = 'Charlie' WHERE id = 1;

arrow: SELECT * FROM arrow_demo.test order by id asc;

arrow: UPDATE test SET name = 'Charlie' WHERE id = 1;

arrow: SELECT * FROM arrow_demo.test order by id asc;

arrow: DELETE FROM arrow_demo.test WHERE id = 2;

arrow: ALTER TABLE arrow_demo.test ADD COLUMN age INT;

arrow: ALTER TABLE arrow_demo.test MODIFY COLUMN name STRING;

arrow: INSERT INTO arrow_demo.test (id, name, age) VALUES (5, 'Eve', 30);

arrow: SELECT * FROM arrow_demo.test WHERE id = 5;

arrow: SELECT * FROM arrow_demo.test order by id asc;

arrow: SHOW CREATE TABLE arrow_demo.test;

arrow: CREATE TABLE arrow_demo.test2 (id INT, age INT) ENGINE=OLAP PRIMARY KEY (id) DISTRIBUTED BY HASH(id) BUCKETS 1 PROPERTIES ('replication_num' = '1');

arrow: INSERT INTO arrow_demo.test2 VALUES (1, 18), (2, 20);

arrow: SELECT * FROM (SELECT id, name FROM arrow_demo.test) AS sub WHERE id = 1;

arrow: SET time_zone = '+08:00';