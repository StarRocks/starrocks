FROM ubuntu:22.04

RUN apt-get update -y \
        && apt-get install --no-install-recommends -y automake binutils-dev bison byacc ccache flex libiberty-dev libtool maven zip python3 python-is-python3 make cmake gcc g++ default-jdk git patch lld bzip2 wget unzip curl \
        && rm -rf /var/lib/apt/lists/*

ENV JAVA_HOME=/lib/jvm/default-java
